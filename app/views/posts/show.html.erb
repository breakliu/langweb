<style type="text/css">
.mycenter { text-align: center; }
.mycenter h2 { margin: 0px; }
.mycenter h3 { margin: 0px; }
.mycenter h5 { margin: 0px; margin-bottom: 3px;}
</style>

<div class="row">
  <div class="span1"></div>
  <div class="span10"><%= image_tag asset_path('pic1.jpg') %></div>
  <div class="span1"></div>
</div>

<div class="row">
  <div class="span1"></div>
  <div class="span10">
    <div class="page-header mycenter">
      <div><h2><%= @post.title %></h2></div>
      <div><h5><%= @post.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %></h5></div>
    </div>
    <div>
      <%= raw @post.content %>
    </div>
  </div>
  <div class="span1"></div>
</div>

