<div class="row">
  <div class="span1"></div>
  <div class="span10"><%= image_tag asset_path('pic1.jpg') %></div>
  <div class="span1"></div>
</div>

<div class="row">
  <div class="span1"></div>
  <div class="span10">
    <div class="page-header"><h2><%= @type.name %></h2></div>
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th>标题</th>
          <th>发布时间</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post_path(post) %></td>
          <td><%=l post.created_at %></td>
        </tr>
      <% end %>
        </tbody>
      </table>

      <%= paginate @posts %>

    </div>
  <div class="span1"></div>
</div>



